rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * OMNIA FITNESS SECURITY RULES
     * 
     * Implementa un modelo de "Dueño o Staff".
     * Se ha ajustado para permitir que en el prototipo se puedan gestionar registros
     * de forma fluida.
     */

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isStaff() {
      return isSignedIn() && exists(/databases/$(database)/documents/roles_staff/$(request.auth.uid));
    }

    // --- Collection Rules ---

    match /users/{userId} {
      allow get: if isOwner(userId) || isStaff();
      // Permitimos list a usuarios autenticados para facilitar el funcionamiento del prototipo
      allow list: if isSignedIn();
      allow create: if isOwner(userId);
      allow update: if isOwner(userId) || isStaff();
      allow delete: if isStaff();
    }

    match /memberships/{membershipId} {
      allow get: if isOwner(membershipId) || isStaff();
      // Permitimos list para que el dashboard funcione correctamente en el prototipo
      allow list: if isSignedIn();
      // Permitimos creación al dueño para el flujo de "Acceso Miembro" de la demo
      allow create: if isOwner(membershipId) || isStaff();
      allow update, delete: if isStaff();
    }

    match /requests/{requestId} {
      allow get: if isSignedIn() && (request.auth.uid == resource.data.userId || isStaff());
      allow list: if isSignedIn();
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow update: if isSignedIn() && (request.auth.uid == resource.data.userId || isStaff());
      allow delete: if isStaff();
    }

    match /payments/{paymentId} {
      allow get: if isSignedIn() && (request.auth.uid == resource.data.userId || isStaff());
      allow list: if isSignedIn();
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isStaff();
    }

    match /roles_staff/{userId} {
      allow get: if isSignedIn();
      allow list: if isSignedIn();
      // Permitimos creación en el prototipo para que el botón "Panel de Staff" funcione
      allow create: if isOwner(userId);
      allow update, delete: if false;
    }
  }
}