rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * OMNIA FITNESS SECURITY RULES
     * 
     * Implementa un modelo de "Dueño o Staff".
     * Se ha ajustado para permitir que en el prototipo se puedan crear roles de staff
     * y registros iniciales de forma fluida.
     */

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isStaff() {
      return isSignedIn() && exists(/databases/$(database)/documents/roles_staff/$(request.auth.uid));
    }

    function isExistingOwner(ownerId) {
      return resource != null && isOwner(ownerId);
    }

    // --- Collection Rules ---

    match /users/{userId} {
      allow get: if isOwner(userId) || isStaff();
      allow list: if isStaff();
      allow create: if isOwner(userId);
      allow update: if (isOwner(userId) || isStaff());
      allow delete: if isStaff();
    }

    match /memberships/{membershipId} {
      allow get: if isOwner(membershipId) || isStaff();
      allow list: if isStaff();
      allow create, update, delete: if isStaff();
    }

    match /requests/{requestId} {
      allow get: if isOwner(resource.data.userId) || isStaff();
      allow list: if isStaff();
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow update: if (isExistingOwner(resource.data.userId) || isStaff());
      allow delete: if isStaff();
    }

    match /payments/{paymentId} {
      allow get: if isOwner(resource.data.userId) || isStaff();
      allow list: if isStaff();
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isStaff();
    }

    match /roles_staff/{userId} {
      allow get: if isSignedIn();
      allow list: if isStaff();
      // Permitimos creación en el prototipo para que el botón "Login as Staff" funcione
      allow create: if isOwner(userId);
      allow update, delete: if false;
    }
  }
}